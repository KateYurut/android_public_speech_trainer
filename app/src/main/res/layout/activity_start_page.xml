<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/start_page_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackground"
    tools:context=".StartPageActivity">

    <Button
        android:layout_gravity="right|bottom"
        android:id="@+id/addBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/oval_button"
        android:text="@string/add_presentation_symbol"
        android:textAppearance="@android:style/TextAppearance.Holo.Large.Inverse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:longClickable="true"
            android:id="@+id/recyclerview_startpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:paddingBottom="100dp"
            android:clipToPadding="false"
            />
</FrameLayout>